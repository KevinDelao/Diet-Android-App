<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shrimp_instruction1"
            android:layout_width="391dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_instruction1"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_instruction2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_instruction_title" />

        <TextView
            android:id="@+id/shrimp_instruction2"
            android:layout_width="389dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_instruction2"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_instruction3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_instruction1" />

        <TextView
            android:id="@+id/shrimp_instruction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="319dp"
            android:text="@string/healthyrecipe_food_shrimp_instruction3"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_instruction2" />

        <TextView
            android:id="@+id/shrimp_instruction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="320dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_instruction_title"
