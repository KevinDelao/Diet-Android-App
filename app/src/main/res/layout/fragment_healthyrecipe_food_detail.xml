            android:textColor="@color/sub_title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_instruction1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/shrimp_ingredient_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="320dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_ingredient_title"
            android:textColor="@color/sub_title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shrimp_ingredient1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="237dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:text="@string/healthyrecipe_food_shrimp_ingredient1"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient_title" />

        <TextView
            android:id="@+id/shrimp_ingredient2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="185dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_ingredient2"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient1" />

        <TextView
            android:id="@+id/shrimp_ingredient3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_ingredient3"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient2" />

        <TextView
            android:id="@+id/shrimp_ingredient6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="5dp"
            android:text="@string/healthyrecipe_food_shrimp_ingredient6"
            android:textColor="@color/colorPrimaryOff"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient5" />

        <TextView
            android:id="@+id/shrimp_ingredient5"
            android:layout_width="wrap_content"
