            app:layout_constraintBottom_toTopOf="@+id/shrimp_ingredient5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient3" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="51dp"
            android:layout_height="27dp"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_instruction_title"
            app:layout_constraintEnd_toStartOf="@+id/shrimp_timer"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient7"
            app:srcCompat="@android:drawable/presence_away" />

        <TextView
            android:id="@+id/shrimp_timer"
            android:layout_width="334dp"
            android:layout_height="38dp"
            android:layout_marginEnd="30dp"
            android:text="@string/healthyrecipe_food_shrimp_timer"
            android:textColor="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toTopOf="@+id/shrimp_instruction1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/shrimp_ingredient7"
            app:layout_constraintVertical_bias="0.27" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>